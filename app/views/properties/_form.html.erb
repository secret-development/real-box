<%= simple_form_for([@subject, @property], :html => {:class => "form-horizontal"}) do |f| %>
  <%= error_messages_for(@property) %>
  <fieldset>
    <legend><%= @property.legend_value %></legend>
  </fieldset>
  <%= render :partial => "attr", :locals => {:f => f, :attr => @attr} %>
  <div class="control-group">
    <div class="controls">
      <%= hidden_field_tag('property[subject_id]', @property.subject_id.nil? ? params[:subject_id] : @property.subject_id ) %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit @property.button_value, :class => "btn btn-primary" %>
    <% if properties_zero?(@subject) %>
      <%= link_to icon_share_alt_white + " Пропустить", @subject, :class => "btn btn-info property-cancel" %>
    <% else %>
      <button type="reset" class="btn cancel-form">Отмена</button>    
    <% end %>
  </div>
  <!-- tmp -->
  <% unless @subject.new_record? %>
    <% params[:find_values] = @subject.typesubject.find_values %>
  <% end %>  
  <!-- tmp -->
<% end %>
