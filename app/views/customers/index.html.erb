<h1 class="title-page"><%= @title %></h1>
<%= link_to plus_icon + "Добавить" , new_customer_path, :class => "btn button-add" %>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>#</th>
      <th>Фамилия</th>
      <th>Имя</th>
      <th>Тип клиента</th>
      <th>Соц. статус</th>
      <th>Телефон</th>
      <th>Сот. телефон</th>
      <th>Электронная почта</th>
      <th>Заметка</th>
      <th>Операции</th>
    </tr>
  </thead>
   
  <% @customers.each do |c| %>
    <tbody>
      <tr>
        <td><%=  %></td>
        <td> <%= c.lastname %></td>
        <td><%= c.firstname %></td>
        <td><%= c.type_customer.title %></td>
        <td><%= c.social_status.title %></td>
        <td><%= c.phonehome %></td>
        <td><%= c.phonemobile %></td>
        <td><%= mail_to c.email %></td>
        <td><%= truncate(c.note, :length => 25, :omission => '...') %></td>
        <td>
          <%= link_to eye_icon, customer_path(c) %>
          <%= link_to edit_icon, edit_customer_path(c) %>
          <%= link_to delete_icon, c, :method => :delete, :confirm => "Вы уверены?" %>
        </td>
      </tr>
    </tbody>    
  <% end %>
</table>
