<h1 class="title-page">Действующие клиенты</h1>
<%= flash_msg(flash[:notice]) %>
<%= link_to plus_icon + " Добавить" , new_customer_path, :class => "btn button-add" %>
<%= link_to list_icon + ' Потенциальные клиенты',potentials_path, :class => "btn button-add", :id => "potentials-link" %>


<%= form_tag(customers_path, :method => 'get', :id => 'customers_search')  do %>
  
  <%= hidden_field_tag :sort, params[:sort] %>
  <%= hidden_field_tag :direction, params[:direction] %>
  
  <%= text_field_tag :search, params[:search], :placeholder => "Поиск ...", :class => "span2" %>
 
<div id="customer" class="well">
  <%= render 'customers' %>
</div>
<% end %>

