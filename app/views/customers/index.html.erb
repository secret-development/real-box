<h1 class="title-page"><%= @title %></h1>
<%= flash_msg(flash[:notice]) %>
<%= link_to plus_icon + "Добавить" , new_customer_path, :class => "btn button-add" %>
<%= link_to list_icon + 'Потенциальные клиенты',potentials_path, :class => "btn button-add", :id => "potentials-link" %>

<table class="table table-striped table-condensed customers">
  <thead>
    <tr>
      <td>Тип сделки</td>
      <th>Фамилия</th>
      <th>Имя</th>
      <th>Соц. статус</th>
      <th>Телефон</th>
      <th>Сот. телефон</th>
      <th>Электронная почта</th>
      <th>Заметка</th>
      <th>Операции</th>
      </tr>
    </thead>

  <tbody>
    <% @customers.each do |c| %>
       <tr>
        <td><%= c.typetransaction.name %></td>
        <td> <%= c.lastname %></td>
        <td><%= c.firstname %></td>
        <td><%= c.social_status.title %></td>
        <td><%= c.phonehome %></td>
        <td><%= c.phonemobile %></td>
        <td><%= mail_to c.email %></td>
        <td><%= truncate(c.note, :length => 25, :omission => '...') %></td>
        <td>
          <%= link_to eye_icon, :controller => 'customers', :action => 'show', :id => c.id %>
          <%= link_to edit_icon, edit_customer_path(c) %>
          <%= link_to delete_icon, c, :method => :delete, :confirm => "Вы уверены?" %>
        </td>
        </tr>      
      <% end %>
    </tbody>
  </table>

