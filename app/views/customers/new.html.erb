<h1>Добавить клиента</h1><br/>
<%= form_for @customer do |c| -%>
  
  <%= c.label :firstname, "Имя:" %><br/>
  <%= c.text_field :firstname %><br/>
  
  <%= c.label :lastname, "Фамилия:" %><br/>
  <%= c.text_field :lastname %><br/>
  
  <%= c.label :phonehome, "Телефон:" %><br/>
  <%= c.text_field :phonehome %><br/>
  
  <%= c.label :phonemobile, "Сот.телефон:" %><br/>
  <%= c.text_field :phonemobile %><br/>
  
  <%= c.label :email, "Email:" %><br/>
  <%= c.email_field :email %><br/>
  
  <%= c.label :typecust, "Тип клиента:" %><br/>
  <%= c.select(:typecust,options_for_select([["Покупатель","Покупатель"],["Продавец","Продавец"],["Собственник","Собственник"],["Арендатор","Арендатор"],["Обменник","Обменник"]])) %><br/>
  
  <%= c.label :real, "Потенциальный:" %><br/>
  <%= c.check_box :real %><br/>
  
  <%= c.label :socialstatus, "Статус:" %><br/>
  <p>
    <%= c.radio_button(:socialstatus,"Студент")  %>
    <%= c.label(:socialstatus,"Студент")  %>
    <label><%= c.radio_button(:socialstatus,"Семейные")  %></label>
    <%= c.label(:socialstatus,"Семейные")  %>
    <%= c.radio_button(:socialstatus,"Работающий(ая)")  %>
    <%= c.label(:socialstatus,"Работающий(ая)")  %>
  </p><br/>
  
  
  <%= c.label :note, "Заметка:" %><br/>
  <%= c.text_area :note, :size => "30x15" %><br/>
  
  <%= c.submit "Сохранить" %>
  
  
  
<% end -%>
