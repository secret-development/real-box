<%= form_for @customer do |c| %>
  <%= error_messages_for( @customer ) %>
  
  <div class="field">
    <%= c.label :firstname, "Имя:" %>
    <%= c.text_field :firstname %>
  </div>
  
  <div class="field">
    <%= c.label :lastname, "Фамилия:" %>
    <%= c.text_field :lastname %>
  </div>
  
  <div class="field">
    <%= c.label :phonehome, "Телефон:" %>
    <%= c.text_field :phonehome %>
  </div>
  
  <div class="field">
    <%= c.label :phonemobile, "Сот.телефон:" %>
    <%= c.text_field :phonemobile %>
  </div>
  
  <div class="field">
    <%= c.label :email, "Email:" %>
    <%= c.email_field :email %>
  </div>
  
  <div class="field">
    <%= c.label :type_customer_id, "Тип клиента" %>
    <%= c.collection_select(:type_customer_id, TypeCustomer.all, :id, :title) %>  
  </div>
  
  <div class="field">
    <%= c.label :real, "Потенциальный:" %>
    <%= c.check_box :real %>
  </div>
  
  <div class="field">
    <%= c.label :social_status_id, "Социальный статус" %>
    <%= c.collection_select(:social_status_id, SocialStatus.all, :id, :title) %>      
  </div>
  
  
  <div class="text-area">
    <%= c.label :note, "Заметка:" %>
    <%= c.text_area :note %>
  </div>
  
  <div class="submit">
    <%= c.submit @customer.button_value %>
  </div>
<% end %>
