<%= form_for @customer do |c| %>
  
  <div class="field">
    <%= c.label :firstname, "Имя:" %>
    <%= c.text_field :firstname %>
  </div>
  
  <div class="field">
    <%= c.label :lastname, "Фамилия:" %>
    <%= c.text_field :lastname %>
  </div>
  
  <div class="field">
    <%= c.label :phonehome, "Телефон:" %>
    <%= c.text_field :phonehome %>
  </div>
  
  <div class="field">
    <%= c.label :phonemobile, "Сот.телефон:" %>
    <%= c.text_field :phonemobile %>
  </div>
  
  <div class="field">
    <%= c.label :email, "Email:" %>
    <%= c.email_field :email %>
  </div>
  
  <div class="field">
    
  </div>
  
  <div class="field">
    <%= c.label :real, "Потенциальный:" %>
    <%= c.check_box :real %><br/>
  </div>
  
  <div class="radio-button">
    
  </div>
  
  
  <div class="text-area">
    <%= c.label :note, "Заметка:" %>
    <%= c.text_area :note %>
  </div>
  
  <div class="submit">
    <%= c.submit "Сохранить" %>
  </div>
<% end %>
