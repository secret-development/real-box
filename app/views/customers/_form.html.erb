<%= form_for(@customer, :html => { :class => "form-horizontal"}) do |f| %>
  <fieldset>
    <legend><%= @customer.legend_value %></legend>
    <div class="control-group">
      <%= f.label :lastname, "Фамилия:" %>
      <div class="controls">
        <%= f.text_field :lastname%>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :firstname, "Имя:" %>
      <div class="controls">
        <%= f.text_field :firstname%>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :phonehome, "Телефон:" %>
      <div class="controls">
        <%= f.text_field :phonehome %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :phonemobile, "Сотовый телефон:" %>
      <div class="controls">
        <%= f.text_field :phonemobile %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :email, "Почтовый адрес:" %>
      <div class="controls">
        <%= f.text_field :email %>  
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :type_customer_id, "Тип клиента:" %>
      <div class="controls">
        <%= f.collection_select(:type_customer_id, TypeCustomer.asctitle, :id, :title) %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :social_status_id, "Социальный статус клиента:" %>
      <div class="controls">
        <%= f.collection_select(:social_status_id, SocialStatus.asctitle, :id, :title) %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls"></div>
    </div>
    <div class="control-group">
      <div class="controls"></div>
    </div>
    
    <div class="form-actions">
    <%= f.submit @customer.button_value, :class => "btn btn-primary" %>
    <button type="reset" class="btn cancel-form">Отмена</button>
    </div>
  </fieldset>
<% end %>
