<table class="table table-striped table-condensed customers">
  <thead>
    <tr>
      <th><%= sortable "typetransaction_id", "Тип сделки" %></th>
      <th><%= sortable "lastname", "Фамилия" %></th>
      <th><%= sortable "firstname", "Имя" %></th>
      <th>Соц. статус</th>
      <th>Телефон</th>
      <th>Сот. телефон</th>
      <th>Электронная почта</th>
      <th>Заметка</th>
      <th>Недвижимость</th>
      <th>Действия</th>
      </tr>
    </thead>

  <tbody>
    <% @customers.each do |c| %>
       <tr>
        <td><%= c.typetransaction.name %></td>
        <td> <%= c.lastname %></td>
        <td><%= c.firstname %></td>
        <td><%= c.social_status.title %></td>
        <td><%= c.phonehome %></td>
        <td><%= c.phonemobile %></td>
        <td><%= mail_to c.email %></td>
        <td><%= truncate(c.note, :length => 25, :omission => '...') %></td>
        <td>
          <%= link_to plus_icon, new_subject_path(:customer_id => c.id), :title => "Добавить недвижимость" %>
        </td>
        <td class="actions-buttons">
          <%= link_to eye_icon, :controller => 'customers', :action => 'show', :id => c.id %>
          <%= link_to edit_icon, edit_customer_path(c) %>
          <%= link_to delete_icon, c, :method => :delete, :confirm => "Вы уверены?" %>
        </td>
        </tr>      
      <% end %>
    </tbody>
  </table>
  <%= paginate @customers %>
