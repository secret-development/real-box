<div id="users">
  <h1 class="title-page">Персонал</h1>
  <% @users.each do |user| %>
    <div class="full_name">
      <%= link_to user.full_name, user_path(user) %>
    </div>
    <div class="actions-buttons">
      <%= link_to edit_icon, edit_user_path(user) %>
      <%= link_to delete_icon, user, :method => :delete,
          :confirm => "Вы уверены?" %>
    </div>
    <div class="birth_date">
      <%= user.birth_date.strftime('%d.%m.%Y') %>
    </div>
    <div class="email">
      <%= user.email %>
    </div>
    <div class="phone">
      <%= user.phone %>
    </div>
    <div class="adress">
      <%= user.adress %>
    </div>
    <br />
  <% end %>
  <%= link_to "Добавить персонал", new_user_path, :class => "btn" %>
</div>