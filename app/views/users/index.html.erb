<h1>Персонал</h1>
<%= flash_msg(flash[:notice]) %>
<table class="table table-striped">
  <thead>
    <th>Фамилия Имя</th>
    <th>Действия</th>
  </thead>
  <tbody>
    <% @users.each do |u| %>
    <tr>
      <td><%= u.lastname %> <%= u.firstname %></td>
      <td class="actions-buttons">
        <%= link_to eye_icon, user_path(u) %>
        <% if can? :update, @users %>  
          <%= link_to edit_icon, edit_user_path(u) %>
        <% end %>
        <% if can? :destroy, @users %>  
        <%= link_to delete_icon, user_path(u), method: :delete, confirm: "Вы уверены?"  %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>

</table>
<div class="form-actions">
<% if can? :new, @users %>  
  <%= link_to 'Создать нового пользователя', new_user_path, :class => "btn"  %> <br />
<% end %>
</div>

