<%= form_for(@user, :html => {:class => "form-horizontal", :id => "user-new"}) do |f| %>
  <fieldset>
    <%= error_messages_for(@user) %>
    <legend> <%= @user.legend_value %></legend>
    <div class="control-group">
      <%= f.label :lastname, "Lastname" %>
      <div class="controls">
        <%= f.text_field :lastname %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :firstname, "Firstname" %>
      <div class="controls">
        <%= f.text_field :firstname %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :phonehome, "Home phone" %>
      <div class="controls">
        <%= f.text_field :phonehome %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :phonemobile, "Mobile phone" %>
        <div class="controls">
          <%= f.text_field :phonemobile, :placeholder => "mobile phone" %>
        </div>
    </div>
    
    <div class="control-group">
      <%= f.label :email, "e-mail" %>
      <div class="controls">
      <%= f.email_field :email %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :password, @user.label_value %>
      <div class="controls">
      <%= f.password_field :password, :id => "password" %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :password_confirmation, "Confirm password" %>
      <div class="controls">
      <%= f.password_field :password_confirmation %>
      </div>
    </div>
    <% if current_user.role? %>  
    <div class="control-group">
      <%= f.label :role, "Administrator" %>
      <div class="controls">
      <%= f.check_box :role %>
      </div>
    </div>
    <% else %>
    <% end %>  
    <div class="form-actions"> 
      <%= f.submit "Create", :class => "btn btn-primary" %>
      <button type="reset" class="btn cancel-form">Cancel</button>
    </div>
  </fieldset>  
<% end %>
