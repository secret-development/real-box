<h1 class="title-page">
  <%= link_to "Settings", settings_path %> â†’ Apartment complexes
</h1>
<%= flash_msg(flash[:notice]) %>
<% @cities.each do |c| %>
  <div class="city-block-d">
    <h3 class="city-name-d"><%= c.name %>:</h3>  
    <div class="districts-b">
      <% c.residents.each do |r| %>
        <div class="district-b">
          <span class="district-t">
            <%= r.title %>
          </span>
          <span class="actions-with-d">
            <%= link_to edit_icon, edit_resident_path(r), :rel => "tooltip", :title => "Edit" %>
            <%= link_to delete_icon, r, :method => :delete, :confirm => "Are you sure?", :rel => "tooltip", :title => "Remove (undesirable)" %>
          </span>
        </div>
      <% end %>
    </div>
  </div>
<% end %>