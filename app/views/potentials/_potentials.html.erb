<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Тип сделки</th>
      <th>Фамилия</th>
      <th>Имя</th>
      <th>Соц. статус</th>
      <th>Дом. телефон</th>
      <th>Сот. телефон</th>
      <th>Добавить объект</th>
      <th>Действия</th>
    </tr>
  </thead>
   
  <% @potentials.each do |p| %>
    <tbody>
      <tr>
        <td><%= p.typetransaction.name %></td>
        <td><%= link_to(p.lastname,p) %></td>
        <td><%= p.firstname %></td>
        <td><%= p.social_status.title %></td>
        <td><%= p.phonehome %></td>
        <td><%= p.phonemobile %></td>
        <td>
          <%= link_to plus_icon, new_subject_path(:customer_id => p.id), 
              :title => "Добавить недвижимость" %>
        </td>
        <td class="actions-buttons">
          <%= link_to eye_icon, customer_path(p) %>
          <%= link_to edit_icon, edit_customer_path(p) %>
          <%= link_to delete_icon, p , :method => :delete, 
              :confirm => "Вы уверены?" %>
        </td>
      </tr>
    </tbody>    
  <% end %>
</table>
<%= paginate @potentials %>