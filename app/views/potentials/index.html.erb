<h1 class="title-page"><%= @title %></h1>
<%= flash_msg(flash[:notice]) %>
<%= link_to list_icon + 'Клиенты', customers_path, :class => "btn button-add", :id => "customers-link" %>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Тип сделки</th>
      <th>Фамилия</th>
      <th>Имя</th>
      <th>Соц. статус</th>
      <th>Телефон</th>
      <th>Сот. телефон</th>
      <th>Электронная почта</th>
      <th>Заметка</th>
      <th>Операции</th>
    </tr>
  </thead>
   
  <% @potentials.each do |p| %>
    <tbody>
      <tr>
        <td><%= p.typetransaction.name %></td>
        <td> <%= p.lastname %></td>
        <td><%= p.firstname %></td>
        <td><%= p.social_status.title %></td>
        <td><%= p.phonehome %></td>
        <td><%= p.phonemobile %></td>
        <td><%= mail_to p.email %></td>
        <td><%= truncate(p.note, :length => 25, :omission => '...') %></td>
        <td>
          <%= link_to eye_icon, customer_path(p) %>
          <%= link_to edit_icon, edit_customer_path(p) %>
          <%= link_to delete_icon, p , :method => :delete, :confirm => "Вы уверены?" %>
        </td>
      </tr>
    </tbody>    
  <% end %>
</table>
