<%= form_for(@paginator, :html => {:class => "form-horizontal pag-valid-form"}) do |f| %>
  <%= error_messages_for(@paginator) %>
  <fieldset>
    <legend>
      <%= @paginator.resource %>
    </legend>
    <div class="control-group">
      <%= f.label :paginate, "Number of elements:" %>
      <div class="controls">
        <%= f.text_field :paginate, :class => "textfield-paginate" %>  
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit "Edit", :class => "btn btn-primary" %>
      <button type="reset" class="btn cancel-form">Cancel</button>
    </div>
  </fieldset>
<% end %>