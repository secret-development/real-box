<div id="task_form">
  <%= form_for(@task, :html => {:class => "form-horizontal"}) do |f| %>
    <%= error_messages_for(@task) %>
    <fieldset>
      <legend><%= @task.legend %></legend>
      <div class="control-group">
        <%= f.label :title, "Название:" %>
        <div class="controls">
          <%= f.text_field :title %>  
        </div>
      </div>
      <div class="control-group">
        <%= f.label :description, "Описание:" %>
        <div class="controls"> 
          <%= f.text_area :description, :rows => "8", :class => "span4" %>  
        </div>
      </div>
      <div class="control-group">
        <%= f.label :user_id, "Ответственный:" %>
        <div class="controls">
          <%= collection_select(:task, :user_id, User.forform, 
                                :id, :full_name) %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :deadline, "Дедлайн:" %>
        <div class="controls">
          <%= f.datetime_select :deadline, 
                            :order => [:day, :month, :year],
                            :start_year => Time.now.year, 
                            :end_year => Time.now.year + 3 %>
        </div>
      </div>
      <%= f.hidden_field :done, :value => false %>
      <div class="form-actions">
        <%= f.submit @task.button_value, :class => "btn btn-primary" %>
        <button type="reset" class="btn cancel-form">Отмена</button>
      </div>
    </fieldset>
  <% end %>
</div>