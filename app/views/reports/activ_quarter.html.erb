<div id="chart-activ-quarter" style="width: 760px; height: 300px; float: left;">
</div>
<script type="text/javascript" charset="urf-8">
  $(function() {
    new Highcharts.Chart({
      chart: { renderTo: 'chart-activ-quarter', zoomType: 'x', backgroundColor: "#F4F4FF"},
      title: { text: 'Квартал'},
      xAxis: { type: 'datetime'},
      yAxis: {
        title: { text: 'Активность'},
        labels: {
				  formatter: function() {
					  return this.value
          }
        }
      },
      tooltip: {
        formatter: function () {
          return Highcharts.dateFormat("%B %e %Y", this.x) + ': '  + Highcharts.numberFormat(this.y, 2);
        }  
      },
      plotOptions: {
			  line: {
				  dataLabels: {
					  enabled: true
				  },
			}
		},
      series: [{
        name: "<%= Report.return_name %>",
        pointInterval: <%= 1.day * 1000 %>,
        pointStart: <%= 3.months.ago.to_i * 1000 %>,
        data: <%= (3.months.ago.to_date..Date.today).map { |date| Report.activ_user(date)}.inspect %>
      }],
    });
  });
</script>
