<div id="chart-finance-year" style="width: 100%; height: 400px;">
</div>
<script type="text/javascript" charset="urf-8">
  $(function() {
    new Highcharts.Chart({
      chart: { renderTo: 'chart-finance-year', zoomType: 'x', backgroundColor: "#F4F4FF"},
      title: { text: 'Год'},
      xAxis: { type: 'datetime', dateTimeLabelFormats: { month: '%b `%e'}},
      yAxis: {
        title: { text: 'Доход'},
        labels: {
				  formatter: function() {
					  return this.value
          }
        }
      },
      tooltip: {
        formatter: function () {
          return Highcharts.dateFormat("%B %e %Y", this.x) + ': '  + Highcharts.numberFormat(this.y, 2);
        }  
      },
      plotOptions: {
			  line: {
				  dataLabels: {
					  enabled: true
				  },
			}
		},
      series: [{
        name: "USD",
        pointInterval: <%= 1.day * 1000 %>,
        pointStart: <%= 1.years.ago.to_i * 1000 %>,
        data: <%= (1.years.ago.to_date..Date.today).map { |date| Report.total_dollar(date).to_f}.inspect %>
      },
      {
        name: "RU",
        pointInterval: <%= 1.day * 1000 %>,
        pointStart: <%= 1.years.ago.to_i * 1000 %>,
        data: <%= (1.years.ago.to_date..Date.today).map { |date| Report.total_ru(date).to_f}.inspect %>
      },
      {
        name: "EURO",
        pointInterval: <%= 1.day * 1000 %>,
        pointStart: <%= 1.years.ago.to_i * 1000 %>,
        data: <%= (1.years.ago.to_date..Date.today).map { |date| Report.total_euro(date).to_f }.inspect %>
      },
      {
        name: "TG",
        pointInterval: <%= 1.day * 1000 %>,
        pointStart: <%= 1.years.ago.to_i * 1000 %>,
        data: <%= (1.years.ago.to_date..Date.today).map { |date| Report.total_tg(date).to_f }.inspect %>
      }],
    });
    Highcharts.setOptions({
      lang: {
        //downloadPDF: 'Экспорт в PDF',
        months: ['Январь','Февраль', 'Март', 'Апрель', 'Май', 'Июнь', 'Июль', 'Август', 'Сентябрь', 'Октябрь', 'Ноябрь', 'Декабрь'],
        shortMonths: ['Янв', 'Фев', 'Мар', 'Апр', 'Май', 'Июн', 'Июл', 'Авг', 'Сен', 'Окт', 'Ноя', 'Дек' ]
      },
    });
  });
</script>
