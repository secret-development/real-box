<h1 class="title-page">
  <%= link_to "Settings", settings_path %> â†’ Types of real estate
</h1>
<%= flash_msg(flash[:notice]) %>
<%= link_to plus_icon + " Add" , new_typesubject_path, 
    :class => "btn button-add" %>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Apartment complex</th>
      <th>Number of floors</th>
      <th>Number of rooms</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @typesubjects.each do |t| %>
      <tr>
        <td><%= t.name %></td>
        <td><%= t.resident == true ? "Yes" : "No" %></td>
        <td><%= t.floor == true ? "Yes" : "No" %></td>
        <td><%= t.room == true ? "Yes" : "No" %></td>
        <td class="actions-buttons">
          <%= link_to edit_icon, edit_typesubject_path(t) %>
          <%= link_to delete_icon, t, :method => :delete,
                      :confirm => "re you sure?" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<h1 class="warning-city">Beware! When you remove the type of property, all property belonging to this type are automatically deleted!</h1>