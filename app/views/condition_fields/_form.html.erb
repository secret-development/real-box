<%= form_for(@conditionfield, :html => 
  {:class => "form-horizontal condition-field-form-validation"}) do |f| %>
  <%= error_messages_for(@conditionfield) %>
  <fieldset>
    <legend><%= @conditionfield.legend_value %></legend>
    <div class="control-group">
      <%= f.label :typesubject_id, "Type of real estate:" %> 
      <div class="controls">
        <%= collection_select(:condition_field, :typesubject_id,
            Typesubject.all, :id, :name) %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :namefield, "The field name:" %>
      <div class="controls">
        <%= f.text_field :namefield, :placeholder => "Furniture..." %>  
      </div>
    </div>
    <div class="control-group">
      <%= f.label :typefield, "Type of field:" %>
      <div class="controls">
        <%= f.select :typefield, @conditionfield.typefields %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit @conditionfield.button_value, :class => "btn btn-primary" %>
      <button type="reset" class="btn cancel-form">Cancel</button>
    </div>
  </fieldset>
<% end %>