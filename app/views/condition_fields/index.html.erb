<h1 class="title-page">Дополнительные поля объектов</h1>
<%= flash_msg(flash[:notice]) %>
<%= link_to plus_icon + "Добавить" , new_condition_field_path, 
    :class => "btn button-add" %>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Поле:</th>
      <th>Тип недвижимости</th>
      <th>Тип поля:</th>
      <th>Действия:</th>
    </tr>
  </thead>
  <tbody>
    <% @conditionfields.each do |c| %>
      <tr>
        <td><%= c.namefield %></td>
        <td><%= c.typesubject.name %></td>
        <td><%= c.typefield %></td>
        <td class="actions-buttons">
          <%= link_to edit_icon, edit_condition_field_path(c) %>
          <%= link_to delete_icon, c, :method => :delete, 
              :confirm => "Вы уверены?" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>