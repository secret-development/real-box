<%= form_for(@valuefield, :html => { :class => 'form-horizontal'}) do |f| %>
  <%= error_messages_for(@valuefield) %>
  <fieldset>
    <legend><%= @valuefield.legend_value %></legend>
    <div class="control-group">
      <%= f.label :condition_field_id, "Поле:" %>
      <div class="controls">
        <%= collection_select(:value_field, :condition_field_id, 
            ConditionField.all, :id, :namefield) %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :valuefield, "Значение:" %>
      <div class="controls">
        <%= f.text_field :valuefield %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit @valuefield.button_value, :class => "btn btn-primary" %>
      <button type="reset" class="btn cancel-form">Отмена</button>
    </div>
  </fieldset>
<% end %>