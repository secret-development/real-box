<div id="search-page">
  <div class="row">
    <div class="span12" id="search-die">
      <%= form_for @search, :url => results_path, 
        :html => {:method => :get, :id => "search-main-form"} do |f| %>
        <div class="s-group-field">
          <div class="s-field">
            <%= f.label :city_id_eq, "Город:" %>
            <%= f.collection_select(:city_id_eq,
                City.all, :id, :name) %>
          </div>
          <div class="s-field">
            <%= f.label :typetransaction_id_eq, "Клиент хочет" %>
            <%= f.select :typetransaction_id_eq, Result.typetransaction %>
          </div>
          <div class="s-field">
            <%= f.label :typesubject_id_eq, "Тип недвижимости:" %>
            <%= f.collection_select(:typesubject_id_eq,
                Typesubject.all, :id, :name) %>
          </div>
        </div>
        <div class="s-group-field">
          <div class="s-field">
            <%= f.label :district_id_eq, "Район:" %>
            <%= f.grouped_collection_select(:district_id_eq, 
                City.order(:name), :districts, :name ,:id, :title, :include_blank => true) %>
          </div>
          <div class="s-field">
            <%= f.label :price_gte, "Цена:" %>
            <%= f.text_field :price_gte, :class => "price-search-field" %> 
            – 
            <%= f.text_field :price_lte, :class => "price-search-field" %>
            <%= f.select :price_currency_eq, Subject.price_cur_search %>
          </div>
        </div>
        <div class="s-group-field">
          <div class="s-field">
            <%= f.label :area_gte, "Площадь:" %>
            <%= f.text_field :area_gte, :class => "area-search-field" %>
            –
            <%= f.text_field :area_lte, :class => "area-search-field" %>
            <span class="calc-label">м&sup2;</span>
          </div>
        </div>
        <div class="s-action">
          <%= f.submit "Поиск", :class => "btn btn-large btn-success" %>  
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="span12" id="subjects-results">
      <% if @subjects %>
        <h1 class="subjects-results-title">Результат:</h1>
        <% @subjects.each do |s| %>
          <div class="sub-one">
            <div class="photo-sub">
              <% if isset_photo?(s) %>
                <%= link_to(image_tag(s.photos.first.image_url(:thumb)), s) %>
              <% else %>
                <%= link_to(image_tag("no-photo.gif", :title => "Нет фото"), s) %>
              <% end %>
            </div>
            <div class="info-about-subject">
              <div class="main-info-about-subject">
                <% if s.active == true %>
                  <div class="active-sub">
                    <%= link_to s.typesubject.name, s%>
                    <div class="info-price-subject">
                      за <%= price_currency(s) %>
                    </div>  
                    – Активна
                  </div>
                <% else %>
                <div class="inactive-sub">
                  <%= link_to s.typesubject.name, s%>
                  <div class="info-price-subject">
                    за <%= price_currency(s) %>
                  </div>  
                  – Не активна
                </div>
                <% end %>
              </div>
              <div class="other-info-subject">
                <div class="field-other">
                  Адресс: <%= s.address %>
                </div>
                <div class="field-other">
                  Площадь: <%= isset_data(s.area) %> <span class="calc-label">м&sup2;</span>
                </div>
                <div class="field-other">
                  Хозяин: <%= link_to(s.customer.fullname, s.customer) %>
                </div>
              </div>
              
            </div>
            <div class="clear"></div>
          </div>
        <% end %>
        <%= paginate @subjects %>      
      <% end %>
    </div>
  </div>
</div>