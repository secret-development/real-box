<%= form_for(@city, :html => {:class => "form-horizontal"}) do |f| %>
  <fieldset>
    <legend><%= @city.legend_value %></legend>
    <div class="control-group">
      <%= f.label :name, "Название города:" %>
      <div class="controls">
        <%= f.text_field :name, :placeholder => "Астана..." %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit @city.button_value, :class => "btn btn-primary" %>
      <button type="reset" class="btn cancel-form">Отмена</button>
    </div>
  </fieldset>
<% end %>