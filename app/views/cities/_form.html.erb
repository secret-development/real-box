<%= form_for(@city, :html => 
  {:class => "form-horizontal city-form-validation"}) do |f| %>
  <%= error_messages_for(@city) %>
  <fieldset>
    <legend><%= @city.legend_value %></legend>
    <div class="control-group">
      <%= f.label :name, "City name:" %>
      <div class="controls">
        <%= f.text_field :name, :placeholder => "London..." %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit @city.button_value, :class => "btn btn-primary" %>
      <button type="reset" class="btn cancel-form">Cancel</button>
    </div>
  </fieldset>
<% end %>